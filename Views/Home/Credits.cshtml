@{
    ViewData["Title"] = "Credits";
}

<head>
    <style>
        #titles {
            overflow: hidden;
            z-index: 99999;
            left: 0;
            top: 0;
        }
        #credits h1 {
            width: 100%;
            height: 100%;
            text-align: center;
            font-size: 20px;
        }
        #credits dl {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        #credits dl div {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            text-align: center;
            gap: 20px;
        }
        
        #credits dt {
            margin: 0;
            padding: 0;
            text-align: right;
            font-size: 16px;
            clear: left;
        }
        #credits dd {
            margin: 0;
            padding: 0;
            text-align: left;
            font-weight: bold;
            font-size: 16px;    
        }
        #credits p {
            text-align: center;
            font-size: 16px;
        }
        #credits .fineprint {
            width: 100%;
            text-align: center;
            font-size: 10px;
        }
        .clearfix: after {
            visibility: hidden;
            display: block;
            font-size: 0;
            content: " ";
            clear: both;
            height: 0;
        }
        .clearfix {
            display: inline-block;
        }
        /* start commented backslash hack \*/
        * html .clearfix {
            height: 1%;
        }
        .clearfix {
            display: block;
        }
        /* close commented backslash hack */
        img {
            width: 100px;
            height: auto;
        }
    </style>
</head>

